{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@public/*": [
        "../public/*"
      ],
      "@api/*": [
        "./domain/api/*"
      ],
      "@services/*": [
        "./domain/services/*"
      ],
      "@store/*": [
        "./domain/store/*"
      ],
      "@entities/*": [
        "./domain/entities/*"
      ],
      "@common/*":[
        "./components/common/*"
      ],
      "@grilla/*": [
        "./components/grilla/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@types/*": [
        "./ts/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@graph/*": [
        "./domain/graphql/*"
      ],
      "@navController/*": [
        "./src/ui/components/nav/controller"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@css/*": [
        "./styles/*"
      ],
      "@domain/*": [
        "./domain/*"
      ],

    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "codegen.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
